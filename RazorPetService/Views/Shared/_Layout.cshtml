                    if (string.IsNullOrEmpty(Context.Session.GetString("Sesion1")))
                    {
                       //@routes.IgnoreRoute("Sesion/Login");
                        <li class="sesion123"><a class="getstarted scrollto" asp-area="" asp-controller="Sesion" asp-action="Login">INICIAR SESION</a></li>
                    }
                    else
                    {
                        
                        <li class="dropdown">
