@model RazorPetService.Models.Categorias

@{
    @using Microsoft.AspNetCore.Http;
        @if (string.IsNullOrEmpty(Context.Session.GetString("Sesion0")))
        {
            <meta http-equiv="refresh" content="0;url=https://localhost:5001/Sesion/LoginAdmin"/>
        }
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<h1>Editar</h1>
<br />
<br />
<br />

<h4>Categorías</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCategoria" />
            <div class="form-group">
                <label asp-for="NombreCategoria" class="control-label"></label>
                <input asp-for="NombreCategoria" class="form-control" pattern="[A-Za-z]" maxlength="20"/>
                <span asp-validation-for="NombreCategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexAdmin">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
