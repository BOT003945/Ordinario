@model RazorPetService.Models.Mascotas

@{
    ViewData["Title"] = Model.Nombre;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DetailsU</h1>

<div>
    <h4>Mascotas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Model.Nombre
        </dd>
        
    </dl>
</div>

<ul class="list-group">
    @foreach(var item in Model.Cita)
    {
      <li>@item.Descripcion</li>  
    }
</ul>

<div>
    <a asp-action="Edit" asp-route-id="@Model.IdMascota">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
